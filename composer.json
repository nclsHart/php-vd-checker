{
    "name": "nclshart/php-vd-checker",
    "type": "application",
    "description": "A tool to check visual debt in your PHP code",
    "license": "MIT",
    "authors": [
        {
            "name": "Nicolas Hart",
            "email": "contact@nclshart.net"
        }
    ],
    "require": {
        "php": "^7.1",
        "nikic/php-parser": "^3.0",
        "symfony/console": "^3.3",
        "symfony/filesystem": "^3.3",
        "symfony/finder": "^3.3",
        "php-di/php-di": "^5.4"
    },
    "autoload": {
        "psr-4": {
            "PhpVdChecker\\": ["src/"]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "spec\\PhpVdChecker\\": ["spec/"]
        }
    },
    "require-dev": {
        "phpspec/phpspec": "^3.0",
        "leanphp/phpspec-code-coverage": "^3.1"
    },
    "bin": ["php-vd-checker"]
}
